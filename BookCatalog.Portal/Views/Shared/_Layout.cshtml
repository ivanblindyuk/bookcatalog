<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />

    <link href="~/Styles/Bootstrap/bootstrap.css" rel="stylesheet" />
    <link href="~/Styles/FontAwesome/css/fontawesome-all.css" rel="stylesheet" />
    <link href="~/Styles/main.css" rel="stylesheet" />

    <script src="~/Scripts/External/jquery-3.3.1.js"></script>
    <script src="~/Scripts/External/popper.js"></script>
    <script src="~/Scripts/Bootstrap/bootstrap.js"></script>
    <script src="~/Scripts/External/knockout-3.4.2.js"></script>
    <script src="~/Scripts/Main/nav-menu.js"></script>

    <title>Book catalog</title>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-blink">
            @Html.ActionLink("Book catalog", "List", "Books", null, new { @class = "navbar-brand" })
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#nav-menu"
                    aria-controls="nav-menu" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="nav-menu">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        @Html.ActionLink("Books", "List", "Books", null,
                            new { @class = "nav-link", data_bind = "css: { active: Active() == NavMenu.ITEMS.Books }" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Authors", "List", "Authors", null, 
                            new { @class = "nav-link", data_bind = "css: { active: Active() == NavMenu.ITEMS.Authors }" })
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <content>
        <div class="m-2">
            @RenderBody()
        </div>
    </content>
    <script>
        NavMenu.Initialize();
    </script>
</body>
</html>
